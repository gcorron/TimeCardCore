@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TimeCard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/v4-shims.css" />
    <link rel="icon" href="~/favicon.ico?v=2)" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top" , style="background-color:darkmagenta">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Work" asp-action="Index">TimeCard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @{
                        var contractorString = HttpContextAccessor.HttpContext.Session.GetString("Contractor");
                        if (contractorString != null)
                        {
                            var contractor = Newtonsoft.Json.JsonConvert.DeserializeObject(contractorString, typeof(TimeCard.Domain.Lookup)) as TimeCard.Domain.Lookup;
                            if (contractor != null)
                            {
                                <p class="nav navbar-text navbar-right">You are logged in as @contractor.Descr</p>
                            }
                        }

                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item nav-select-default">
                            <a class="nav-link" asp-area="" asp-controller="Work" asp-action="Index">Work</a>
                        </li>
                        <li class="nav-item nav-select-payment">
                            <a class="nav-link" asp-area="" asp-controller="Payment" asp-action="Index">Payment</a>
                        </li>
                        <li class="nav-item nav-select-job">
                            <a class="nav-link" asp-area="" asp-controller="Job" asp-action="Index">Jobs</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="mt-4 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2020 - TimeCard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(function () {
            switch (location.pathname) {
                case "/Payment":
                    $("li.nav-select-payment").addClass("active");
                    break;
                case "/Job":
                    $("li.nav-select-job").addClass("active");
                    break;
                default:
                    $("li.nav-select-default").addClass("active");
            }

        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
